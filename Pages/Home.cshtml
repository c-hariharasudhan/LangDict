@page
@model HomeModel
@{
    ViewData["Title"] = "Dictionary";
}

<h2>Dictionary</h2>


<form asp-page="./Home" method="get">
    <div class="form-actions no-color">
        Search Field
        <select asp-for="SearchField" asp-items="Html.GetEnumSelectList<NewDictionary.Models.KnownValues.SearchField>()">
        </select>
        Search Type
        <select asp-for="SearchType" asp-items="Html.GetEnumSelectList<NewDictionary.Models.KnownValues.SearchType>()">
        </select>    
        <div class="form-group">   
            Display Fields
            @foreach (var field in Model.DisplayFields){
                <input type="checkbox" value="@field.FieldValue" name="Fields" asp-for="@field.Selected" >
                <label class="control-label">@field.FieldName</label>
            }  
             
        </div>
        <p>
            Find by name: <input type="text" name="SearchText" />
            <input type="submit" value="Search" class="btn btn-default" /> 
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
                <th>
                    Search Results
                        </th>
                <!-- <th>
                    Meaning
                </th>
            <th></th> -->
               
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Words) {
        <tr>
            <!-- <td>
                @Html.DisplayFor(modelItem => item.English)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
             -->
            <td>
                 <a asp-page="./Details" asp-route-id="@item.Id">@item.English</a>
            </td>
        </tr>
}
    </tbody>
</table>

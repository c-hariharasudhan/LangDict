                            <span asp-validation-for="Word.Tamil" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Word.Irula" class="control-label col-sm-4"></label>
                        <div class="col-sm-8">
                            <input asp-for="Word.Irula" class="form-control" />
                            <span asp-validation-for="Word.Irula" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Word.Toda" class="control-label col-sm-4"></label>
                        <div class="col-sm-8">
                            <input asp-for="Word.Toda" class="form-control" />
                            <span asp-validation-for="Word.Toda" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Word.Pania" class="control-label col-sm-4"></label>
                        <div class="col-sm-8">
                            <input asp-for="Word.Pania" class="form-control" />
                            <span asp-validation-for="Word.Pania" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Word.Maduva" class="control-label col-sm-4"></label>
                        <div class="col-sm-8">
                            <input asp-for="Word.Maduva" class="form-control" />
                            <span asp-validation-for="Word.Maduva" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Word.Meaning" class="control-label col-sm-4"></label>
                        <div class="col-sm-8">
                            <input asp-for="Word.Meaning" class="form-control" />

                            </select>
                            <span asp-validation-for="Word.PartOfSpeech" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Word.Categories" class="control-label col-sm-4"></label>
                        <div class="col-sm-8">
                            <input asp-for="Word.Categories" class="form-control" />
                            <span asp-validation-for="Word.Categories" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8 text-right">
                        <button type="submit" class="btn btn-default">Create</button>
                        <a asp-page="Index">Back to List</a>
                        </div>
                    </div>
